<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_post_margin"><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/item_post_layout_padding"><include
            android:id="@+id/post_author_layout"
            layout="@layout/include_post_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" /><include
            android:id="@+id/post_text_about"
            layout="@layout/include_post_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_author_layout"
            android:layout_marginTop="@dimen/inc_post_text_margin_top"
            android:layout_marginLeft="@dimen/inc_post_text_margin_left" /><LinearLayout
            android:id="@+id/likes_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/post_text_about"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/post_body_margin"
            android:orientation="horizontal"><ImageView
                android:id="@+id/post_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:src="@android:drawable/ic_menu_share" /><ImageView
                android:id="@+id/post_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/post_like_margin_left"
                android:layout_marginRight="@dimen/post_like_margin_right"
                android:background="?attr/selectableItemBackground"
                android:src="@drawable/ic_toggle_star_outline_24" /><TextView
                android:id="@+id/post_num_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                tools:text="7" />
        </LinearLayout><ImageView
            android:id="@+id/video_thumb"
            android:layout_width="@dimen/video_thumb_w_h"
            android:layout_height="@dimen/video_thumb_w_h"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" /></RelativeLayout></androidx.cardview.widget.CardView>